<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:baselineAligned="false"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:translationY="40dp">

        <Button
            android:id="@+id/lowerVolume"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:rotationX="0"
            android:text="-" />

        <Button
            android:id="@+id/raiseVolume"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:rotationX="0"
            android:text="+" />
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderFreq"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/slider_freq"
        android:stepSize="20.0"
        android:translationY="40dp"
        android:value="440.0"
        android:valueFrom="0.0"
        android:valueTo="2000.0" />

    <TextView
        android:id="@+id/sliderFreqTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:text="@string/slider_freq"
        android:textSize="18sp"
        android:translationY="40dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderMusicians"
        android:layout_width="243dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="@string/slider_freq"
        android:rotation="0"
        android:stepSize="1"
        android:translationX="0dp"
        android:translationY="0dp"
        android:value="0"
        android:valueFrom="0.0"
        android:valueTo="10" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderWeight"
        android:layout_width="243dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="@string/slider_freq"
        android:rotation="0"
        android:stepSize="0.05"
        android:translationX="0dp"
        android:translationY="40dp"
        android:value="0"
        android:valueFrom="0.0"
        android:valueTo="1" />

    <TextView
        android:id="@+id/sliderMusiciansNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:text="Number of Musicians"
        android:textSize="18sp"
        android:translationY="-50dp" />

    <TextView
        android:id="@+id/sliderWeightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="Weight"
        android:textSize="18sp"
        android:translationY="-20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal"
        android:baselineAligned="false"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/SetBaseButton"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="Set Camera Base"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonResetLog"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/button_reset_log"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_horizontal"
        android:baselineAligned="false"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/startButton"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/start"
            android:textSize="15sp" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0sp"
            android:padding="10sp"
            android:text="@string/stop"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/getStatusButton"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="@string/get_status"
        android:textSize="15sp" />

    <Button
        android:id="@+id/MusicButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Music on/off" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Camera on/off" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderMinValue"
        android:layout_width="355dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:contentDescription="@string/slider_freq"
        android:rotation="90"
        android:stepSize="1"
        android:translationX="-140dp"
        android:translationY="-160dp"
        android:value="0"
        android:valueFrom="0.0"
        android:valueTo="60" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderMaxValue"
        android:layout_width="355dp"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:contentDescription="@string/slider_freq"
        android:rotation="90"
        android:stepSize="1"
        android:translationX="140dp"
        android:translationY="-210dp"
        android:value="0"
        android:valueFrom="0.0"
        android:valueTo="255" />

</LinearLayout>