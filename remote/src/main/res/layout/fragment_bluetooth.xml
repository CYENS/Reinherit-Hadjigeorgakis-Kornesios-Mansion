<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/modeTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:baselineAligned="false"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:tabBackground="@color/gray"
        app:tabSelectedTextColor="@color/teal_200"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/performance_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_performance_tab"
        />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/calibration_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_calibration_tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ground_floor_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ground Floor" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/upper_floor_tab_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upper Floor"
            />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mode_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>