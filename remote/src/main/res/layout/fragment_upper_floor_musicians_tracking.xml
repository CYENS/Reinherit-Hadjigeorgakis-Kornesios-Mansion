<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="center|top"
    android:orientation="vertical"
    app:layout_anchorGravity="top"
    tools:context=".UpperFloorMusiciansTracking"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/textPaperTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paper"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderPaperValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Paper"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />
    
    <TextView
        android:id="@+id/textClocksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clocks"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderClocksValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Clocks"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <TextView
        android:id="@+id/textWoodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wood"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderWoodValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Wood"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <TextView
        android:id="@+id/textChurchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Church"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderChurchValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Church"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <TextView
        android:id="@+id/textStormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storm"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderStormValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Storm"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <TextView
        android:id="@+id/textPrayerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prayer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderPrayerValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Prayer"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <TextView
        android:id="@+id/textSewingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sewing"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderSewingValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Sewing"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <TextView
        android:id="@+id/textBedroomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedroom"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:translationY="10dp"
        android:layout_marginTop="-15dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderBedroomValue"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:contentDescription="Bedroom"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="10" />

    <Button
        android:id="@+id/saveAllValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:padding="10sp"
        android:text="Save all"
        android:textSize="15sp" />

    <Button
        android:id="@+id/resetValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:text="Reset all"
        android:textSize="15sp" />
</LinearLayout>